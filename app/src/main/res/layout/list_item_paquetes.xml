<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:orientation="horizontal">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="4dp"
                android:layout_margin="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivImagePaquete"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_centerInParent="true"
                        android:scaleType="center"
                        app:srcCompat="@color/button_mr" />

                    <TextView
                        android:id="@+id/tvNombre"
                        style="@style/TextPrimaryLg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Nombre del servicio"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescripcionCorta"
                        style="@style/TextPrimaryMd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp"
                        android:text="Descripción del servicio" />

                    <TextView
                        android:id="@+id/tvVerMas"
                        style="@style/TextAccentMd"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="16dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="16dp"
                        android:paddingTop="8dp"
                        android:text="Ver más..." />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvNombre2"
                style="@style/TextPrimaryMd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Nombre del servicio" />

            <TextView
                style="@style/TextPrimaryMd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/string_incluye"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDescripcionLarga"
                style="@style/TextSecondaryMd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="Descripcion del service" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>